-@friends.each do |friend|
  -i = Account.find(friend.following_id)
  .account-summary
    %i
      =link_to profile_picture(i, 70), profile_path(i.username)
      =link_to i.username, profile_path(i.username), :class => "text-dark"
      %i{id: "my-#{i.id}-friend"}
        =link_to 'Delete', destroy_friend_path(friend), method: :delete, class: "btn btn-danger btn-sm float-right delete", data: { remote: true}