-comments.each do |comment|
  .comment
    =link_to profile_picture(comment.account, 45), profile_path(comment.account.username)
    %strong= link_to comment.account.username
    -if @current_account != nil
      -if comment.account.id == @current_account.id
        = link_to comment_path(comment), method: :delete, class: "btn btn-default btn-xs float-right delete", data:{ remote: true } do
          %i.fa.fa-times
    .content
      =comment.comment
    %p.text-muted
      =time_ago_in_words comment.created_at
      ago