<div class="text-center">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">

      <%= f.text_field :login, autofocus: true, :class => "form-controll", size: 30 , :placeholder => "Username or Email"%>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "off", :class => "form-controll", size: 30 ,:placeholder => "Password"%>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", :class => 'btn btn-primary btn-lg' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>