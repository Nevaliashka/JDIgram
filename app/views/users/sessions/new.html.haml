.class="text-center"
  .content Login
  =form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .class="field"
      =f.text_field :login, autofocus: true, :class => "form-controll", size: 30 , :placeholder => "Username or Email"
    .class="field"
      =f.password_field :password, autocomplete: "off", :class => "form-controll", size: 30 , :placeholder => "Password"
    -if devise_mapping.rememberable?
      .class="field"
        =f.check_box :remember_me
        =f.label :remember_me
    .class="action"
      =f.submit "Log in", :class=>'btn btn-primary btn-lg'

  end