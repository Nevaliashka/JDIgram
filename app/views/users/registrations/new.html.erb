<div class="text-center">
  <h2>Registration</h2>
  <br>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.text_field :username, autofocus: true, autocomplete: "username", :class => "form-controll", size: 30 , :placeholder => "Username" %>
    </div>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-controll", size: 30 , :placeholder => "Email" %>
    </div>



    <div class="field">
      <% if @minimum_password_length %>

        <%= f.password_field :password, autocomplete: "off", :class => "form-controll", size: 30 , :placeholder => "#{@minimum_password_length} characters minimum" %>
      <% else %>
        <%= f.password_field :password, autocomplete: "off", :class => "form-controll", size: 30 , :placeholder => "" %>
      <% end %><br />

    </div>

    <div class="field">

      <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-controll", size: 30 , :placeholder => "Password confirmation" %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit "Registration", :class => "btn btn-primary btn-lg" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
