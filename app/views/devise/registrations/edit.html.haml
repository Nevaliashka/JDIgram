.text-center

  %h2.text-info Edit your profile

.container
  #row.row.justify-content-center.align-items-center
    #column.col-md-6
      #box.col-md-12
        = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f|
          .text-danger= devise_error_messages!
          .field

            %label.text-info{:for => "image"} Avatar:
            %br/
            =f.file_field :image, class: "form-control"
            =f.hidden_field :image_cache

          .field
            %label.text-info{:for => "username"} Username:
            %br/
            = f.text_field :username, autofocus: true,  :class => "form-control", size: 30 , :placeholder => "Username"

          .field
            %label.text-info{:for => "first_name"} First name:
            %br/
            = f.text_field :first_name, autofocus: true, :class => "form-control", size: 30 , :placeholder => "First name"

          .field
            %label.text-info{:for => "last_name"} Last name:
            %br/
            = f.text_field :last_name, autofocus: true,  :class => "form-control", size: 30 , :placeholder => "Last name"

          .field
            %label.text-info{:for => "description"} Description:
            %br/
            = f.text_area :description, autofocus: true,  :class => "form-control", size: 30 , :placeholder => "Description"
          .field
            %label.text-info{:for => "website"} Website:
            %br/
            = f.text_field :website, autofocus: true,  :class => "form-control", size: 30 , :placeholder => "Website"



          .field
            %label.text-info{:for => "email"} Email:
            %br/
            = f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control", size: 30 , :placeholder => "Email"

          .field
            %label.text-info{:for => "current_password"} Current password:
            %br/
            = f.password_field :current_password, autofocus: true, autocomplete: "current_password", :class => "form-control", size: 30 , :placeholder => "Current password"


          .field
            %label.text-info{:for => "password"} New password:
            %br/
            = f.password_field :password, autocomplete: "off", :class => "form-control",  :placeholder => "May be empty"

          .field
            %label.text-info{:for => "password_confirmation"} New password confirmation:
            %br/
            = f.password_field :password_confirmation, autofocus: true, autocomplete: "password_confirmation", :class => "form-control", size: 30 , :placeholder => "Password confirmation"

          .actions
            .d-flex.flex-column.flex-md-row
              %nav.my-0.mr-md-auto.font-weight-normal= f.submit "Update", :class => "btn btn-info"
              %nav.my-2.my-md-0.mr-md-3= link_to "Back", :back, :class => "btn btn-warning"
              %nav.my-2.my-md-0.mr-md-0= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class=>"btn btn-danger"











