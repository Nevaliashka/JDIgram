.text-center
  %br
  %h1.text-info Forgot your password?
  %br
.container
  #row.row.justify-content-center.align-items-center
    #column.col-md-6
      #box.col-md-12
        = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
          .text-danger= devise_error_messages!
          = f.hidden_field :reset_password_token
          .field
            %label.text-info{:for => "password"} New password:
            %br/
            -if @minimum_password_length
              = f.password_field :password, autocomplete: "off", :class => "form-control", size: 30 , :placeholder => "#{@minimum_password_length} characters minimum"
              %br/
            -else
              = f.password_field :password, autocomplete: "off", :class => "form-control", size: 30 , :placeholder => ""
              %br/

          .field
            %label.text-info{:for => "password_confirmation"} Confirm your password:
            %br/
            = f.password_field :password_confirmation, autocomplete: "off", :class => "form-control", size: 30 , :placeholder => "Password confirmation"
            %br/


            .actions
              = f.submit "Change my password", :class => "btn btn-outline-info"
          = render "devise/shared/links"